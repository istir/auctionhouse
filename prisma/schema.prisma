// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URI")
}


model User {
  id          Int       @default(autoincrement())  @id
  firstName   String
  lastName    String
  username    String?   //? if seller is a store or doesn't want to display real name
  avatar      String?
  email       String    @unique
  address     Address?  @relation()
  phoneNumber String    
  password    String
  birthDate   DateTime
  tokens       Token[]   @relation()
  cart       Cart? @relation()
  auctionsAsSeller Auction[] @relation(name:"seller")
  auctionsAsBuyer Auction[] @relation(name:"buyer")
  bids Bid[] 
}
model Cart {
  id          Int        @default(autoincrement()) @id
  user        User      @relation(fields:[userId],references: [id])      
  userId      Int
  items       Auction[] 
}
model Address {
  id          Int        @default(autoincrement()) @id
  user        User      @relation(fields:[userId],references: [id])      
  userId      Int
  street      String
  zipCode     Int
  city        String
}

model Token {
  id            Int      @default(autoincrement()) @id
  token         String   @unique
  validTime     String
  timeGenerated DateTime
  user          User     @relation(fields:[userId],references: [id])
  userId        Int
}

model Auction {
  id            Int   @default(autoincrement()) @id
  name          String
  price         Float
  originalPrice Float? //? if sale this would be HIGHER from 'price'
  image         String[] 
  dateEnd       String
  timesBought   Int
  usersBought   Int
  category      Category @relation(fields:[categoryId],references: [id])
  categoryId    Int
  seller        User    @relation(name:"seller",fields:[sellerId],references: [id])
  sellerId      Int
  buyer         User?    @relation(name:"buyer",fields:[buyerId],references: [id])
  buyerId       Int?
  inUserCart    Cart[]   
  bidding       Boolean @default(false)
  bids           Bid[]
  url           String? @unique
  markdown      String?
}

model Bid {
  id            Int   @default(autoincrement()) @id
  auction       Auction @relation(fields:[auctionId],references: [id])
  auctionId    Int
  user          User    @relation(fields:[userId],references: [id])
  userId        Int
    offer     Float
}

model Category {
  id      Int @default(autoincrement()) @id
  name    String
  parentId    Int?
  parent      Category? @relation("CategoryChildren",fields:[parentId],references: [id])
  children    Category[] @relation("CategoryChildren")
  auctions    Auction[] 
   
}



generator client {
  provider = "prisma-client-js"
}
